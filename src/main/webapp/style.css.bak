	height:2400px;
}

.service{
	width:auto;
	animation-name:guru;
	animation-iteration-count:1;
	animation-duration:3s;
	animation-direction:ease-in;
	
}
@keyframes guru{
	from {width:0px;}
	to{width:485px;}
}
}